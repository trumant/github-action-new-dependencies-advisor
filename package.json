{
  "name": "github-action-new-dependencies-advisor",
  "version": "1.1.0",
  "private": true,
  "description": "GitHub Action adding comments to pull requests with package health information about newly added npm dependencies",
  "main": "lib/main.js",
  "engines": {
    "node": "20"
  },
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "pack": "ncc build",
    "test": "jest",
    "all": "npm run build && npm run format && npm run lint && npm run pack"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lirantal/github-action-new-dependencies-advisor.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "author": {
    "name": "Liran Tal",
    "email": "liran.tal@gmail.com"
  },
  "contributors": [
    {
      "name": "Damien Senger",
      "email": "hello@raccoon.studio"
    },
    {
      "name": "Travis Truman",
      "email": "trumant@gmail.com"
    }
  ],
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.2.6",
    "@actions/github": "^6.0.0",
    "jsdom": "^24.0.0",
    "lodash": "^4.17.19",
    "package-json": "^10.0.0",
    "underscore": "^1.10.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/jsdom": "^21.1.6",
    "@types/lodash": "^4.14.150",
    "@types/node": "^20.12.2",
    "@types/underscore": "^1.9.4",
    "@typescript-eslint/eslint-plugin": "^7.4.0",
    "@typescript-eslint/parser": "^7.4.0",
    "@vercel/ncc": "^0.38.1",
    "commitlint": "^19.2.1",
    "eslint": "^8.57.0",
    "eslint-plugin-jest": "^27.9.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "jest-circus": "^29.7.0",
    "js-yaml": "^4.1.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "typescript": "^5.4.3"
  }
}
